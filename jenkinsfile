pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/embuntiara/web-cece.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                echo Building Docker image...
                docker build -t webcece .
                '''
            }
        }

        stage('Run Containers') {
            steps {
                bat '''
                echo Running containers...
                docker compose up -d
                '''
            }
        }

        stage('Migrate Database') {
            steps {
                bat '''
                echo Migrating database...
                docker exec webcece php artisan migrate --force
                '''
            }
        }
    }
}
