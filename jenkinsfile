pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'webcece:latest'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/embuntiara/web-cece.git',
                    credentialsId: 'github-token'
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t %DOCKER_IMAGE% .'
            }
        }

        stage('Run Container') {
            steps {
                bat 'docker run -d -p 8000:8000 --name webcece %DOCKER_IMAGE%'
            }
        }

        stage('Migrate Database') {
            steps {
                bat 'docker exec webcece php artisan migrate --force'
            }
        }
    }
    post {
        always {
            echo '❌ Build gagal.'
        }
        success {
            echo '✅ Build dan deploy sukses!'
        }
    }
}
